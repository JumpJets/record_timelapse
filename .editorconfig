# https://editorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{md,html,js,css,scss,tcss,sass,json,ini,toml,sh,Dockerfile}]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = tab
indent_size = 4
